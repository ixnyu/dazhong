<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:id="@+id/main_tabs_fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <RadioGroup
        android:id="@+id/main_tabs_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/main_home_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="0dp"
            android:drawablePadding="8dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:button="@null"
            android:drawableTop="@drawable/main_index_home"
            android:gravity="center"
            android:textColor="@drawable/main_colors_selector"
            android:text="@string/home"/>

        <RadioButton
            android:id="@+id/main_Group_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="0dp"
            android:drawablePadding="8dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:button="@null"
            android:gravity="center"
            android:text="@string/Group"
            android:drawableTop="@drawable/main_index_tuan"
            android:textColor="@drawable/main_colors_selector"
            />

        <RadioButton
            android:id="@+id/main_search_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="0dp"
            android:drawablePadding="8dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:button="@null"
            android:gravity="center"
            android:text="@string/search"
            android:drawableTop="@drawable/main_index_search"
            android:textColor="@drawable/main_colors_selector"
            />

        <RadioButton
            android:id="@+id/main_my_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="0dp"
            android:drawablePadding="8dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:button="@null"
            android:gravity="center"
            android:text="@string/my"
            android:drawableTop="@drawable/main_index_my"
            android:textColor="@drawable/main_colors_selector"
            />
    </RadioGroup>
</LinearLayout>